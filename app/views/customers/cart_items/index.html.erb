<h3>ショッピングカード</h3>
<div class="col-xs-11", id="no-cart">
  <% if @cart_items.present? %>
    <%= link_to "カートを空にする", cart_items_path, method: :delete, data: {confirm: "カートを空にしてよろしいですか？" }, class: "btn btn-danger" %>
    <table class="table table-hover table-bordered">
      <tr>
        <td>商品名</td>
        <td>単価(税込)</td>
        <td>数量</td>
        <td>小計</td>
        <td></td>
      </tr>
      <% @cart_items.each do |i| %>
        <tr id="cart-<%= i.id %>">
          <td>
            <%= attachment_image_tag i.item, :image_id, :fill, 20, 20, format:"jpg", fallback: "no_image.jpg", class:"icon" %>
            <%= i.item.name %>
          </td>
          <td>
            <%= i.item.tax_in_price.to_s(:delimited, delimiter: ",") %>
          </td>
          <td>
            <%= form_with model:i, cart_item_path(i), method: :patch, remote: true do |f| %>
              <%= f.number_field :count, size: 10, min: 1 %>
              <%= f.submit "変更", class:"btn btn-success" %>
            <% end %>
          </td>

        </tr>
      <% end %>
    </table>


  <% else %>
    <%= render 'no_cart' %>
  <% end %>
</div>